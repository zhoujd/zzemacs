#!/bin/bash                                                                                                                          

if [ $# = 0 ]; then
    echo "Usage: $(basename $0) <files>|<directories>"
    exit 0
fi

emacsclient -n -e "(if (> (length (frame-list)) 1) 't)" | grep t                                                                     
if [ "$?" = "1" ]; then                                                                                                              
    emacsclient -c -n -a "" "$@"                                                                                                 
else                                                                                                                                 
    emacsclient -n -a "" "$@"
fi
