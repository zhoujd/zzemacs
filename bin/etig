#!/bin/sh

case $1 in
    -v|--version|-h|--help )
        exec tig "$@"
        ;;
    * )
        toplevel=$(git rev-parse --show-toplevel 2>/dev/null)
        if [ -n "$toplevel" ]; then
            repo=$(basename $toplevel)
            exec st -t "tig:$repo $$@$(hostname)" -e tig "$@" 2>/dev/null
        else
            echo "etig: Not a git repository"
        fi
        ;;
esac
