#!/bin/bash

## https://www.emacswiki.org/emacs/EmacsAsDaemon

EMACS_SRV_UBUNTU=~/.config/systemd/user/emacs.service
EMACS_SRV_CENTOS=/usr/lib/systemd/system/emacs@.service

install_ubuntu() {
    echo "Setup $EMACS_SRV_UBUNTU"
    mkdir -p ~/.config/systemd/user
    tee $EMACS_SRV_UBUNTU  <<EOF
[Unit]
Description=Emacs text editor
Documentation=info:emacs man:emacs(1) https://gnu.org/software/emacs/

[Service]
Type=forking
ExecStart=/usr/bin/emacs --daemon
ExecStop=/usr/bin/emacsclient --eval "(kill-emacs)"
Environment=SSH_AUTH_SOCK=%t/keyring/ssh
Restart=on-failure

[Install]
WantedBy=default.target
EOF

    echo "Start emacs daemon"
    systemctl enable --user emacs
    systemctl start --user emacs
}

install_centos() {
    user=jiandon
    echo "Setup $EMACS_SRV_CENTOS"
    sudo tee /usr/lib/systemd/system/emacs@.service  <<EOF
[Unit]
Description=Emacs: the extensible, self-documenting text editor

[Service]
Type=forking
ExecStart=/usr/bin/emacs --daemon --user %u
ExecStop=/usr/bin/emacsclient --eval "(progn (setq kill-emacs-hook 'nil) (kill-emacs))"
Restart=always
User=%i
WorkingDirectory=%h

[Install]
WantedBy=multi-user.target
EOF

    echo "Start emacs daemon"
    systemctl daemon-reload 
    systemctl enable emacs@${user}
    systemctl start emacs@${user}
}



install() {
    case $1 in
        ubuntu )
            install_ubuntu
            ;;
        centos )
            install_centos
            ;;
        * )
            echo "$0 install {ubuntu|centos}"
            ;;
    esac
}

uninstall() {
    case $1 in
        ubuntu )
            systemctl stop emacs
            systemctl disable emacs
            rm -f $EMACS_SRV_UBUNTU
            ;;
        centos )
            systemctl stop emacs
            systemctl disable emacs@${user}
            sudo rm $EMACS_SRV_CENTOS
            ;;
        * )
            echo "$0 install {ubuntu|centos}"
            ;;
    esac
}

stop() {
    echo "Stop emacs daemon"
    emacsclient -e "(kill-emacs)"
    echo "Wait 5s"
    sleep 5s
    echo "killall emacs"
    killall emacs
}

start() {
    echo "Start emacs daemon"
    case $1 in
        ubuntu )
            systemctl start --user emacs
            ;;
        centos )
            user=jiandon
            systemctl start emacs@${user}
            ;;
        daemon )
            emacs --fg-daemon
            ;;
        * )
            echo "$0 start {ubuntu|centos|daemon}"
            ;;
    esac
}

restart() {
    echo "Restart emacs daemon"
    stop
    start $1
}

status() {
    ps -ef | grep emacs | grep daemon | grep -v emacs-daemon
}

case $1 in
    install )
        install $2
        ;;
    uninstall )
        uninstall $2
        ;;
    start )
        start $2
        ;;
    stop )
        stop
        ;;
    restart )
        restart $2
        ;;
    status )
        status
        ;;
    * )
        echo "Usage: $0 {install|start|stop|restart|status}"
        ;;
esac
