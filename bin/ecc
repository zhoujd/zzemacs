#!/bin/bash

if [ $# = 0 ]; then
    echo "Usage: $(basename $0) <files>|<directories>"
    exit 0
fi

FRAME_EXIST=`cat <<EOF
(if (> (length (frame-list)) 1)
    't)
EOF
`
emacsclient -n -e "$FRAME_EXIST" | grep t >/dev/null
if [ "$?" = "1" ]; then
    if [ "$DISPLAY" = "" ]; then
        emacsclient -c -a "" "$@"
    else
        emacsclient -c -n -a "" "$@"
    fi
else
    if [ "$DISPLAY" = "" ]; then
        emacsclient -a "" "$@"
    else
        emacsclient -n -a "" "$@"
    fi
fi
