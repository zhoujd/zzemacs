#!/bin/sh

### parameter desc
## $1 => $LOCAL
## $2 => $REMOTE

# Check run OS
if [ "$OS" = "Windows_NT" ] ; then
    ZZEMACS_ROOT=$(cd $ZZNIX_HOME && pwd -W)/home/jiandon/zzemacs
else
    ZZEMACS_ROOT=$(cd $(dirname $0)/.. && pwd)
fi

EMACS="emacs"

$EMACS --quick \
       --eval "(load-file \"$ZZEMACS_ROOT/.emacs-diff\")" \
       --eval "(ediff-sample-diff \"$1\" \"$2\")" \
       --eval "(message \"emacs diff finished.\")"
