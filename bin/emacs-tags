#!/bin/bash
#set -x

SCRIPT_ROOT=$(cd $(dirname "${BASH_SOURCE[0]}") && pwd)
TAGS_ROOT=${TAGS_ROOT:-$HOME/.emacs.d/tags}
PROJ_LIST=(
    #/usr/include
    $*
)

create_init() {
    echo "create init..."
    mkdir -p $TAGS_ROOT
    rm -f $TAGS_ROOT/TAGS
    rm -f $TAGS_ROOT/cscope.*
}

create_etags() {
    echo "create etags to $TAG_ROOT..."
    pushd $TAGS_ROOT > /dev/null
    find ${PROJ_LIST[*]} -type f    \
         \( -iname "*.[chly]"    \
         -o -iname "*.[ch]xx"    \
         -o -iname "*.[ch]pp"    \
         -o -iname "*.cc"        \
         -o -iname "*.hh"        \
         \) \
         -print | etags -
    popd > /dev/null
}

create_cscope() {
    echo "create cscope to $TAG_ROOT..."
    pushd $TAGS_ROOT > /dev/null
    find ${PROJ_LIST[*]} -type f    \
         \( -iname "*.[chly]"    \
         -o -iname "*.[ch]xx"    \
         -o -iname "*.[ch]pp"    \
         -o -iname "*.cc"        \
         -o -iname "*.hh"        \
         \) \
         -print > cscope.files;
    cscope -b -R -q -i cscope.files
    popd > /dev/null
}

case $1 in
    -h|--help )
        cat <<EOF
$(basename $0) {dir1} {dir2} ... {dirN}
TAGS_ROOT=. $(basename $0) {dir1} {dir2} ... {dirN}
EOF
        ;;
    * )
        create_init
        create_etags
        create_cscope
        ;;
esac
