#!/bin/bash
#set -x

SCRIPT_ROOT=$(cd $(dirname "${BASH_SOURCE[0]}") && pwd)
TAGS_ROOT=${TAGS_ROOT:-$HOME/.emacs.d/tags}
PROJ_LIST=(
    .
)

EXCLUDE_LIST=(
    -not -path "/*.git/*"
)

FILTER_LIST=(
    -iname "*.[chly]"   
    -o -iname "*.[ch]xx"
    -o -iname "*.[ch]pp"
    -o -iname "*.cc"    
    -o -iname "*.hh"    
)

create_init() {
    echo "Create init..."
    mkdir -p $TAGS_ROOT
    rm -f $TAGS_ROOT/TAGS
    rm -f $TAGS_ROOT/cscope.*
}

create_etags() {
    echo "Create etags to $TAGS_ROOT..."
    pushd $TAGS_ROOT > /dev/null
    find ${PROJ_LIST[*]}          \
         -type f                  \
         \( ${EXCLUDE_LIST[@]} \) \
         \( ${FILTER_LIST[@]} \)  \
         -print | etags -
    popd > /dev/null
}

create_cscope() {
    echo "Create cscope to $TAGS_ROOT..."
    pushd $TAGS_ROOT > /dev/null
    find ${PROJ_LIST[*]}          \
         -type f -a -not -type l  \
         \( ${EXCLUDE_LIST[@]} \) \
         \( ${FILTER_LIST[@]} \)  \
         -print > cscope.files;
    cscope -b -R -q -i cscope.files
    popd > /dev/null
}

case $1 in
    -h|--help )
        cat <<EOF
Usage:
$ $(basename $0) {dir1} {dir2} ... {dirN}
$ TAGS_ROOT=. $(basename $0) {dir1} {dir2} ... {dirN}
EOF
        ;;
    dep )
        apt install emacs-bin-common cscope
        ;;
    * )
        create_init
        create_etags
        create_cscope
        ;;
esac
