#!/usr/bin/env python

# Bash command line
# $ for i in sys.argv[1]/*.patch; do patch -p1 < $i; done

import os
import sys
import glob

if len(sys.argv) < 2:
    print "Using example: %s <patches folder>" % sys.argv[0]
    sys.exit(1)

patchdir = sys.argv[1]
patchext = "patch"


def main():
    patches = sorted(glob.glob("{}/*.{}".format(patchdir, patchext)))
    for f in patches:
        cmd = "patch -p1 < {}".format(f)
        print(cmd)
        os.system(cmd)


if __name__ == '__main__':
    main()
