#!/bin/sh

### parameter desc
## $1 => $LOCAL
## $2 => $REMOTE

if [ $# != 2 ]; then
    echo Usage: $(basename $0) {local} {remote}
    exit 1
fi

# Check run OS
if [ "$OS" = "Windows_NT" ] ; then
    ZZEMACS_ROOT=$(cd $ZZNIX_HOME && pwd -W)
else
    ZZEMACS_ROOT=$(cd $(dirname $0)/.. && pwd)
fi

EMACS="emacs"

$EMACS --quick \
       --eval "(load-file \"$ZZEMACS_ROOT/elisp/ediff-sample.el\")" \
       --eval "(ediff-sample-diff \"$1\" \"$2\")" \
       --eval "(message \"emacs diff finished.\")"
